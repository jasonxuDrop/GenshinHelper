<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/artifactImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:srcCompat="@drawable/example_item_maidens_distant_love" />

    <TextView
        android:id="@+id/artifactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maiden's Beloved"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/artifactRarity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Rarity"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal"
            android:paddingLeft="100dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/artifactStar1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/artifactStar2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/artifactStar3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/artifactStar4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/artifactStar5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/line_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/artifact2Piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="2-Piece Bonus"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/artifact2PieceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Character healing effectiveness +15%"
            android:textSize="10sp"
            tools:paddingLeft="20dp"
            tools:textColor="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/line_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/artifact4Piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-Piece Bonus"
            android:textColor="#FBFBFB"
            android:textSize="14sp"
            tools:paddingLeft="30dp" />

        <TextView
            android:id="@+id/artifact4PieceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:text="Using an elemental skill or burst increases healing received by all party members by 20% for 10s"
            android:textSize="10sp"
            tools:textColor="#FFFFFF" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:background="#1C1C1E"
        android:translationY="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ResinNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Resin"
            android:translationX="10dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/resin_button" />

        <ImageButton
            android:id="@+id/SearchNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Search"
            android:translationX="265dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/search_button" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>