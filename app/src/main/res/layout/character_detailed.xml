<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="355dp"
        android:layout_height="350dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_secondary_pressed"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            app:srcCompat="@drawable/example_character_beidou_thumb" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beidou"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/CardElementRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_height="30dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:translationY="-25dp"
                    app:srcCompat="@drawable/element_electro"
                    android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-220dp"
                    android:layout_weight="1"
                    android:text="Electro"
                    android:textColor="#7F569B"
                    android:translationY="-25dp"
                    android:layout_width="0dp"/>

                <ImageView
                    android:id="@+id/RarityStar2"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:translationX="-290dp"
                    android:translationY="5dp"
                    app:srcCompat="@drawable/card_star" />

                <ImageView
                    android:id="@+id/RarityStar3"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:translationX="-290dp"
                    android:translationY="5dp"
                    app:srcCompat="@drawable/card_star" />

                <ImageView
                    android:id="@+id/RarityStar4"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:translationX="-290dp"
                    android:translationY="5dp"
                    app:srcCompat="@drawable/card_star" />

                <ImageView
                    android:id="@+id/RarityStar5"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:translationX="-290dp"
                    android:translationY="5dp"
                    app:srcCompat="@drawable/card_star" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="392dp"
        android:layout_height="186dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/detailedDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum at rhoncus risus. Mauris pharetra, nulla sed maximus pulvinar, erat metus dapibus nibh"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_marginLeft="15dp"
            tools:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weapon"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:layout_marginLeft="15dp"
                tools:layout_marginRight="15dp"
                tools:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skills"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:layout_marginLeft="15dp"
                tools:layout_marginRight="15dp"
                tools:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Claymore"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:layout_marginLeft="15dp"
                tools:layout_marginRight="15dp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="79dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/element_anemo" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="79dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/element_anemo" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="79dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/element_anemo" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:text="Constellations"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="407dp"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/element_dendro" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/element_cryo" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/element_pyro" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/element_geo" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView3"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#1C1C1E"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="666dp">

        <Button
            android:id="@+id/ResinNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Resin"
            android:translationX="10dp" />

        <Button
            android:id="@+id/SearchNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Search"
            android:translationX="300dp" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>