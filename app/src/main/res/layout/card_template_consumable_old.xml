<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="104dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/CardLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/CardImageFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:translationZ="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/card_image_frame" />

            <ImageView
                android:id="@+id/CardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:translationZ="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/example_item_crab_ham_veggie_bake" />

            <ImageView
                android:id="@+id/CardImageBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/card_background_3_star" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumable"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/CardSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stats?"
            android:textAlignment="center"
            android:textColor="#929091" />

        <LinearLayout
            android:id="@+id/CardRarityRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CardRarityStar1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

        </LinearLayout>

    </LinearLayout>
</merge>