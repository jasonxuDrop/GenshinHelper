<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/materialImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:srcCompat="@drawable/Item_Prithiva_Topaz_Gemstone" />

    <TextView
        android:id="@+id/materialName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prithiva Topaz Gemstone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/materialSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:text="Source"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Dropped by Normal Bosses and Weekly Bosses"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:text="Rarity"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/card_star" />
    </LinearLayout>
</LinearLayout>