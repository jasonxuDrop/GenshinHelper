<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/materialImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            app:srcCompat="@drawable/example_item_prithiva_topaz_gemstone" />

        <TextView
            android:id="@+id/materialName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prithiva Topaz Gemstone"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/materialSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="50dp"
            android:text="Source"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/materialSourceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:text="Dropped by Normal Bosses and Weekly Bosses"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/lineDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/line_divider" />

        <TextView
            android:id="@+id/materialRarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:text="Rarity"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <ImageView
                android:id="@+id/materialStar1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/materialStar2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/materialStar3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/materialStar4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/materialStar5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#1C1C1E"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ResinNav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@drawable/button_secondary_dark_default"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingStart="12dp"
                android:paddingBottom="2dp"
                app:srcCompat="@drawable/icon_resin_svg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Resin"
                android:textColor="#D7D0C6"
                android:textSize="20sp"
                android:translationY="-2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SearchNav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@drawable/button_secondary_pressed"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingStart="12dp"
                android:paddingBottom="2dp"
                app:srcCompat="@drawable/icon_search_svg_pressed" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Search"
                android:textColor="#1C1C1E"
                android:textSize="20sp"
                android:translationY="-2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>