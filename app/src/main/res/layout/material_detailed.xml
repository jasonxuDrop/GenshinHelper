<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/materialImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:srcCompat="@drawable/topaz_gemstone" />

    <TextView
        android:id="@+id/materialName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prithiva Topaz Gemstone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/materialSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:text="Source"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/materialSourceDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:text="Dropped by Normal Bosses and Weekly Bosses"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/lineDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/line_divider" />

    <TextView
        android:id="@+id/materialRarity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="Rarity"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/materialStar1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/materialStar2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/materialStar3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/materialStar4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/card_star" />

        <ImageView
            android:id="@+id/materialStar5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/card_star" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:background="#1C1C1E"
        android:translationY="-59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ResinNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Resin"
            android:translationX="10dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/resin_button" />

        <ImageButton
            android:id="@+id/SearchNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Search"
            android:translationX="265dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/search_button" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>