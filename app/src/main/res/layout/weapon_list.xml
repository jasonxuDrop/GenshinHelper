<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="416dp"
        android:layout_height="71dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/action_bar" />

    <Spinner
        android:id="@+id/spnOption"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/spinner_bg"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
    <TextView
        android:id="@+id/spnText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="302dp"
        android:layout_height="490dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:translationY="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/card_template_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>


    </TableLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="411dp"
        android:layout_height="66dp"
        android:background="#1C1C1E"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="664dp">

        <Button
            android:id="@+id/ResinNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Resin"
            android:translationX="10dp" />

        <Button
            android:id="@+id/SearchNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Search"
            android:translationX="300dp" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>