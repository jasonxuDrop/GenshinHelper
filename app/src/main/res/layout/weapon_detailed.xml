<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/weaponImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        app:srcCompat="@drawable/example_weapon_wolfs_gravestone" />

    <TextView
        android:id="@+id/weaponName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wolf Gravestone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weaponElementIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="145dp"
            app:srcCompat="@drawable/element_pyro" />

        <TextView
            android:id="@+id/weaponElement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pyro"
            android:textColor="#FF7043"
            tools:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/weaponRarity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Rarity"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingLeft="85dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/weaponStar1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/weaponStar2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/weaponStar3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/weaponStar4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/weaponStar5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/card_star" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/weaponBaseAtk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Base Attack"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/baseAtkNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46"
            android:textSize="20sp"
            tools:paddingLeft="30dp"
            tools:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/weaponSubStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Stat"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            tools:paddingLeft="30dp" />

        <TextView
            android:id="@+id/subStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:text="ATK"
            android:textSize="20sp"
            tools:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/weaponPassive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Passive"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/weaponPassiveDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:text="Wolfish Tracker"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/weaponLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Location"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/weaponLocationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:text="TextView"
            android:textSize="20sp"
            tools:textColor="#FFFFFF" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:background="#1C1C1E"
        android:translationY="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ResinNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Resin"
            android:translationX="10dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/resin_button" />

        <ImageButton
            android:id="@+id/SearchNav"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Search"
            android:translationX="265dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/search_button" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>