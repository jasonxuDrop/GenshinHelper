<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardWeaponView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#EBE4DA"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:layout_margin="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CardImageFrame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:translationZ="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/card_image_frame" />

            <ImageView
                android:id="@+id/CardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:translationZ="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/example_weapon_wolfs_gravestone" />

            <ImageView
                android:id="@+id/CardImageBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/card_background_5_star" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weapon"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/CardImage"/>

        <TextView
            android:id="@+id/CardSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textAlignment="center"
            android:textColor="#929091"
            app:layout_constraintTop_toBottomOf="@+id/CardTitle"/>

        <LinearLayout
            android:id="@+id/CardRarityRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/CardSubtitle">

            <ImageView
                android:id="@+id/CardRarityStar1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

            <ImageView
                android:id="@+id/CardRarityStar5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/card_star" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>